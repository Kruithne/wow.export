root = true

[*]
charset = utf-8

[*.py]
max_line_length = 120
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[{*.js,*.jsx,*.ts,*.tsx}]
max_line_length = 120
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false

[*.{vue,html,css,scss,json}]
indent_size = 2
indent_style = tab

[*.md]
trim_trailing_whitespace = false
