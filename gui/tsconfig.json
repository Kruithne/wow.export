{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": ["es2020", "dom"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"*.js",
		"*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}