{
    "root": true,
    "ignorePatterns": ["lib/", "src/js/3D/lib/", "bin/"],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "globals": {
        "Vue": true,
        "THREE": true,
        "nw": true,
        "BUILD_RELEASE": true,
        "chrome": true,
        "crash": true,
        "getErrorDump": true,
        "BigInt": true,
        "Bun": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        /* Custom */
        "space-before-blocks": "error",
        "curly": [2, "multi-or-nest", "consistent"],
        "no-trailing-spaces": "off",
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "keyword-spacing": "error"
    },
    "plugins": [
        "vue"
    ],
    "extends": [
        "plugin:vue/base",
        "eslint:recommended"
    ]

}