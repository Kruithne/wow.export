{
	"outputDirectory": "./bin",
	"cacheDirectory": "./bin/_cache",
	"sourceDirectory": "./src",
	"webkitVersion": "0.104.1",
	"webkitURL": "https://dl.nwjs.io/v%s/%s",
	"manifest": {
		"name": "wow.export",
		"main": "./src/index.html",
		"chromium-args": "--disable-devtools --disable-raf-throttling --mixed-context --enable-node-worker --disable-logging --password-store=basic",
		"product_string": "wow.export",
		"user-agent": "wow.export (%ver); %osinfo",
		"window": {
			"id": "wow-export-main",
			"icon": "./res/icon.png",
			"width": 1370,
			"height": 988,
			"min_width": 1115,
			"min_height": 988
		}
	},
	"updaterScript": "./updater/updater.js",
	"nativeAddonScript": "./build/build-native-addons.js",
	"manifestInherit": ["name", "description", "license", "version", "contributors"],
	"builds": [
		{
			"name": "win-x64-debug",
			"bundle": "nwjs-sdk-v%s-win-x64.zip",
			"bundleType": "ZIP",
			"sourceMethod": "LINK",
			"sourceTarget": "./src",
			"manifestTarget": "./package.json",
			"filter": {
				"blacklist": [
					"locales\/[^.]+.pak(.info|)$",
					"notification_helper.exe"
				],
				"whitelist": [
					"locales\/en-US.pak$"
				]
			},
			"include": {
				"node_addons/mmap/build/Release/mmap.node": "mmap.node"
			}
		},
		{
			"name": "win-x64",
			"bundle": "nwjs-v%s-win-x64.zip",
			"bundleType": "ZIP",
			"buildArchive": "ZIP",
			"sourceMethod": "BUNDLE",
			"sourceTarget": "./src",
			"bundleConfig": {
				"filterExt": [".js"],
				"jsEntry": "app.js"
			},
			"updater": {
				"target": "bun-windows-x64",
				"out": "updater.exe",
				"metadata": {
					"title": "wow.export updater",
					"publisher": "Tamara's Workbench",
					"description": "Updater for wow.export",
					"copyright": "Marlamin, Kruithne © {{year}}",
					"icon": "./resources/icon.ico"
				}
			},
			"updateBundle": {
				"bundle": "update",
				"manifest": "update.json"
			},
			"manifestTarget": "./package.json",
			"include": {
				"LEGAL": "license/LEGAL",
				"CHANGELOG.md": "src/CHANGELOG.md",
				"resources/icon.png": "res/icon.png",
				"addons/blender/io_scene_wowobj/*": "addon/io_scene_wowobj",
				"node_modules/webp-wasm/webp_node_enc.wasm": "src/webp_node_enc.wasm",
				"node_addons/mmap/build/Release/mmap.node": "src/mmap.node"
			},
			"remap": {
				"nw.exe": "wow.export.exe",
				"credits.html": "license/nwjs.html"
			},
			"rcedit": {
				"binary": "wow.export.exe",
				"icon": "./resources/icon.ico",
				"version-string": {
					"CompanyName": "Tamara's Workbench",
					"FileDescription": "Export Toolkit for World of Warcraft",
					"LegalCopyright": "Marlamin, Kruithne © {{year}}",
					"ProductName": "wow.export",
					"OriginalFilename": "wow.export.exe"
				}
			},
			"filter": {
				"blacklist": [
					"locales\/[^.]+.pak(.info|)$",
					"notification_helper.exe"
				],
				"whitelist": [
					"locales\/en-US.pak$"
				]
			}
		},
		{
			"name": "linux-x64",
			"bundle": "nwjs-v%s-linux-x64.tar.gz",
			"bundleType": "GZ",
			"buildArchive": "GZ",
			"sourceMethod": "BUNDLE",
			"sourceTarget": "./src",
			"bundleConfig": {
				"filterExt": [".js"],
				"jsEntry": "app.js"
			},
			"updater": {
				"target": "bun-linux-x64",
				"out": "updater"
			},
			"updateBundle": {
				"bundle": "update",
				"manifest": "update.json"
			},
			"manifestTarget": "./package.json",
			"include": {
				"LEGAL": "license/LEGAL",
				"CHANGELOG.md": "src/CHANGELOG.md",
				"resources/icon.png": "res/icon.png",
				"addons/blender/io_scene_wowobj/*": "addon/io_scene_wowobj",
				"node_modules/webp-wasm/webp_node_enc.wasm": "src/webp_node_enc.wasm",
				"node_addons/mmap/build/Release/mmap.node": "src/mmap.node"
			},
			"remap": {
				"nw": "wow.export",
				"credits.html": "license/nwjs.html"
			},
			"filter": {
				"blacklist": ["locales\/[^.]+.pak(.info|)$"],
				"whitelist": ["locales\/en-US.pak$"]
			}
		},
		{
			"name": "linux-x64-debug",
			"bundle": "nwjs-sdk-v%s-linux-x64.tar.gz",
			"bundleType": "GZ",
			"sourceMethod": "LINK",
			"sourceTarget": "./src",
			"manifestTarget": "./package.json",
			"filter": {
				"blacklist": [
					"locales\/[^.]+.pak(.info|)$",
					"notification_helper.exe"
				],
				"whitelist": [
					"locales\/en-US.pak$"
				]
			}
		},
		{
			"name": "osx-x64",
			"bundle": "nwjs-v%s-osx-x64.zip",
			"bundleType": "ZIP",
			"buildArchive": "ZIP",
			"sourceMethod": "BUNDLE",
			"bundleConfig": {
				"filterExt": [".js"],
				"jsEntry": "app.js"
			},
			"updater": {
				"target": "bun-darwin-x64",
				"out": "updater"
			},
			"updateBundle": {
				"bundle": "update",
				"manifest": "update.json"
			},
			"sourceTarget": "./wow.export.app/Contents/Resources/app.nw/src",
			"manifestTarget": "./wow.export.app/Contents/Resources/app.nw/package.json",
			"include": {
				"./resources/wet.icns": "./wow.export.app/Contents/Resources/app.icns",
				"LEGAL": "./wow.export.app/License/LEGAL",
				"CHANGELOG.md": "./wow.export.app/Contents/Resources/app.nw/src/CHANGELOG.md",
				"addons/blender/io_scene_wowobj/*": "addon/io_scene_wowobj",
				"node_modules/webp-wasm/webp_node_enc.wasm": "./wow.export.app/Contents/Resources/app.nw/src/webp_node_enc.wasm",
				"node_addons/mmap/build/Release/mmap.node": "src/mmap.node"
			},
			"remap": {
				"nwjs.app": "wow.export.app",
				"./wow.export.app/Contents/MacOS/nwjs": "wow.export.app/Contents/MacOS/wow.export",
				"credits.html": "./wow.export.app/License/nwjs.html"
			},
			"filter": {
				"blacklist": [
					"nwjs.app\/Contents\/Resources\/[^.]+.lproj"
				],
				"whitelist": ["nwjs.app\/Contents\/Resources\/en.lproj"]
			}
		}
	]
}
