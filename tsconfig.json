{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"allowJs": true,
		"types": [
			"node",
			"bun-types" // add Bun global
		]
	}
}